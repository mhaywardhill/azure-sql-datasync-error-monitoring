{
  "name": "Azure SQL Data Sync",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "installBicep": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/powershell:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-bicep",
        "ms-azuretools.vscode-azureresourcegroups",
        "ms-mssql.mssql",
        "ms-vscode.powershell"
      ]
    }
  },
  "postCreateCommand": "pwsh -c 'Install-Module -Name Az.Sql -Repository PSGallery -Force -Scope CurrentUser' && az --version && pwsh --version"
}
